            <!--<span class="far fa-ellipsis-v fa-2x"></span>-->
        </button>

        <div class="collapse navbar-collapse" id="navbarMenuContent">
            <div class="user-info">
                <div class="user-icon"></div>
                <div class="name">James DeSpain</div>
                <span class="company">MetaSource</span>
            </div>
            <div class="navbar-nav">
                <a asp-controller="Home" asp-action="Scan" class="nav-item nav-link active">Scan applications <span class="far fa-barcode-read fa-lg"></span></a>
