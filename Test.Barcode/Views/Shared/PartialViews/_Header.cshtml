@{ 
    bool showBackHomeChevronLink = this.ViewContext.RouteData.Values["controller"].ToString().ToLowerInvariant() == "home" &&
                                   this.ViewContext.RouteData.Values["action"].ToString().ToLowerInvariant() == "index" ?
                                   false :
                                   true;
}
<header>
    <nav class="navbar">
        
        <a asp-controller="Home" asp-action="Index" class="@(showBackHomeChevronLink ? "" : "d-none") back-home"><span class="fal fa-chevron-left fa-lg"></span></a>

        <a href="#" class="navbar-brand">
            <img src="~/images/bug-white.png" />
        </a>
        <button class="navbar-toggler ml-auto" type="button" data-toggle="slide-collapse" data-target="#navbarMenuContent" aria-controls="navbarMenuContent" aria-expanded="false" aria-label="Toggle navigation">
